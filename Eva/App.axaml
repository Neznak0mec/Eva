<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:window"
             x:Class="window.App">

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme Mode="Dark"/>
    </Application.Styles>

    <TrayIcon.Icons>
        <TrayIcons>
            <TrayIcon Icon="/Assets/logo-light.ico" ToolTipText="EVA Tray">
                <TrayIcon.Menu>
                    <NativeMenu>
                        <NativeMenuItem Header="развернуть" Command="{Binding ExitCommand}"/>
                        <NativeMenuItem Header="закрыть" Command="{Binding CloseWindow}"/>
                    </NativeMenu>
                </TrayIcon.Menu>
            </TrayIcon>
        </TrayIcons>
    </TrayIcon.Icons>
</Application>
